{% extends 'base.html.twig' %}

{% block title %}Records library{% endblock %}

{% block stylesheets %}<link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" /><link href="{{ asset('css/main.css') }}" rel="stylesheet" />{% endblock %}
{% block scripts %}<script src="js/jquery.css"></script><script src="js/ekko-lightbox.js"></script>{% endblock %}
{% block body %}
    <div class="container">
    <div class="row"><div class="col-sm-8"><h1>Search results</h1></div><form action="/record/search/searchByText"><div class="col-sm-4"><input name="text" class="search" type="text" placeholder="Another try?"></div></form></div>
    <div class="row header-row">
      <div class="col-sm-2"></div>
      <div class="col-sm-2">Artist</div>
      <div class="col-sm-2">Title</div>
      <div class="col-sm-1">Year</div>
      <div class="col-sm-1">Media type</div>
      <div class="col-sm-1">Media count</div>
      <div class="col-sm-2">Label</div>
      <div class="col-sm-1"></div>

    </div>
    {% for record in records %}
    <div class="row paper-row {% if (loop.index is even) %}even-row{% else %}odd-row{% endif %}">
      <div class="col-sm-2"><a href="{{ record.coverImageUrl }}" data-toggle="lightbox"><img class="img-thumbnail" src="{{record.coverImageUrl}}"></a></div>
      <div class="col-sm-2"><span class="artist">{{record.artist}}</span></div>
      <div class="col-sm-2"><span class="title">{{record.title}}</span></div>
      <div class="col-sm-1"><span class="year">{{record.year}}</span></div>
      <div class="col-sm-1"><span class="media-type">{{record.mediaType}}</span></div>
      <div class="col-sm-1"><span class="media-count">{{record.mediaCount}}</span></div>
      <div class="col-sm-2"><span class="record-label">{{record.recordLabel}}</span></div>
      <div class="col-sm-1"><a href="/record/insert/insertRecord/{{ (loop.index - 1) }}"><button class="btn btn-default" onClick="submit">Add</button></a></div>
    </div>
    {% endfor %}
{% endblock %}
